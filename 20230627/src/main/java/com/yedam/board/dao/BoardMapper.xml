<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.board.dao.BoardMapper">
	
	<select id="List">
	  select * from tbl_board
	</select>
	
	<select id="select">
	   select * from tbl_board
	   where brd_title = #{brdTitle}
	</select>
	
	<insert id="insert">
	   insert into tbl_board (brd_no, brd_title, brd_writer, brd_content, create_date, click_cnt)
	   values (#{brdNo}, #{brdTitle}, #{brdWriter}, #{brdContent}, #{createDate}, #{clickCnt})
	</insert>
	
	<delete id="remove">
	   delete from tbl_board
	   where brd_title = #{brdTitle}
	</delete>
	
</mapper>